{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "lib": [
      "ES2016"
    ],
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "strict": false,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/**"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/DateTime.ts",
    "src/DateTimeContract.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "tests/**/*"
  ]
}
